<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/postcommentlay"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/newcommentinput"
        android:layout_marginBottom="5pt"
        android:orientation="vertical">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/listlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:divider="@null" />

        </android.support.v4.widget.SwipeRefreshLayout>
    </RelativeLayout>

    <com.optimalsolutions.fadfed.messages.MessageInput
        android:id="@+id/newcommentinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:attachmentButtonDefaultIconPressedColor="@color/green_dark"
        app:emjoyButtonDefaultBgColor="@color/gray_light"
        app:emjoyButtonDefaultBgPressedColor="@color/gray_light"
        app:emjoyButtonDefaultIconDisabledColor="@color/gray_light"
        app:inputButtonDefaultBgColor="@color/green"
        app:inputButtonDefaultBgPressedColor="@color/green_dark"
        app:inputCursorDrawable="@drawable/shape_custom_cursor"
        app:inputHint="@string/add_comment"
        app:showAttachmentButton="false" />

</RelativeLayout>
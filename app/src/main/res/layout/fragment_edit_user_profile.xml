<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="5dp"
    android:background="@color/edit_user_profile_bg"
    android:scrollbars="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/edituserpiclay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp">

            <com.optimalsolutions.fadfed.utils.CircularNetworkImageView
                android:id="@+id/userpicimg"
                android:layout_width="@dimen/user_profile_pic"
                android:layout_height="@dimen/user_profile_pic"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:src="@drawable/image_bg" />

            <ImageButton
                android:id="@+id/adduserpicbut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/userpicimg"
                android:layout_alignLeft="@+id/userpicimg"
                android:background="@drawable/image_add" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/adduserpicbut"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="#c0c0c0" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/editusernamelay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edituserpiclay"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/nicknametv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:layout_marginTop="25dp"
                android:text="@string/editnickname"
                android:textSize="@dimen/text_size_small" />

            <EditText
                android:id="@+id/usernameet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/nicknametv"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:inputType="textPersonName"
                android:textSize="@dimen/text_size_small" />


            <Button
                android:id="@+id/usernamesavebut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usernameet"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:text="@string/save"
                android:textColor="@color/user_name_color"
                android:textSize="@dimen/text_size_large" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/usernamesavebut"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"

                android:background="#c0c0c0" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/edituseremaillay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editusernamelay"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/useremailtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:layout_marginTop="25dp"
                android:text="@string/editemail"
                android:textSize="@dimen/text_size_small" />

            <EditText
                android:id="@+id/useremailet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/useremailtv"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/text_size_small" />


            <Button
                android:id="@+id/useremailsavebut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/useremailet"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:text="@string/save"
                android:textColor="@color/user_name_color"
                android:textSize="@dimen/text_size_large" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/useremailsavebut"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"

                android:background="#c0c0c0" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/edituserpwlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edituseremaillay"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/userpwtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:layout_marginTop="25dp"
                android:text="@string/editpassword"
                android:textSize="@dimen/text_size_small" />

            <EditText
                android:id="@+id/userpwet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/userpwtv"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:inputType="textPersonName"
                android:textSize="@dimen/text_size_small" />


            <Button
                android:id="@+id/userpwsavebut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userpwet"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:text="@string/save"
                android:textColor="@color/user_name_color"
                android:textSize="@dimen/text_size_large" />
        </RelativeLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/edituserpwlay"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="#c0c0c0" />

        <TextView
            android:id="@+id/hidetv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/view1"
            android:layout_below="@+id/view1"
            android:layout_marginTop="15dp"
            android:text="@string/hide"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/showtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/hidetv"
            android:layout_alignBottom="@+id/hidetv"
            android:layout_marginLeft="35dp"
            android:layout_toRightOf="@+id/hidetv"
            android:text="@string/show"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/agetv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/view1"
            android:layout_below="@+id/showtv"
            android:layout_marginTop="25dp"
            android:text="@string/dateofbirth"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/sextv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/agetv"
            android:layout_below="@+id/agetv"
            android:layout_marginTop="15dp"
            android:text="@string/sex"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/countrytv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/agetv"
            android:layout_below="@+id/sextv"
            android:layout_marginTop="15dp"
            android:text="@string/country"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/agesp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/agetv"
            android:layout_alignLeft="@+id/showtv"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/agetv"
            android:clickable="true"
            android:gravity="right"
            android:textSize="@dimen/text_size_small" />

        <RadioGroup
            android:id="@+id/agerg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/agetv"
            android:layout_alignLeft="@+id/hidetv"
            android:layout_alignRight="@+id/showtv"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/hideagecb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:button="@drawable/checkbox" />

            <RadioButton
                android:id="@+id/showagecb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:button="@drawable/checkbox"
                android:checked="true" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/sexvaluerg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/showtv"
            android:layout_below="@+id/agetv"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/agetv"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/femaletv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:text="@string/female"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/femalerb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:button="@drawable/radiobutton"
                android:gravity="center_vertical"
                android:padding="2dp" />

            <TextView
                android:id="@+id/maletv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:text="@string/male"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/malerb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/radiobutton"
                android:checked="true"
                android:gravity="center_vertical"
                android:padding="2dp" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/sexrg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sextv"
            android:layout_alignLeft="@+id/hidetv"
            android:layout_alignRight="@+id/showtv"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/hidesexcb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:button="@drawable/checkbox" />

            <RadioButton
                android:id="@+id/showsexcb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:button="@drawable/checkbox"
                android:checked="true" />
        </RadioGroup>

        <Spinner
            android:id="@+id/countrysp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/countrytv"
            android:layout_alignLeft="@+id/showtv"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/agetv"
            android:gravity="right"
            android:popupBackground="#cccccc"
            android:textSize="@dimen/text_size_small" />


        <RadioGroup
            android:id="@+id/countryrg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/countrytv"
            android:layout_alignLeft="@+id/hidetv"
            android:layout_alignRight="@+id/showtv"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/hidecountrycb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:button="@drawable/checkbox" />

            <RadioButton
                android:id="@+id/showcountrycb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:button="@drawable/checkbox"
                android:checked="true" />
        </RadioGroup>

        <Button
            android:id="@+id/saveuserinfobut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/countryrg"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:text="@string/save"
            android:textColor="@color/user_name_color"
            android:textSize="@dimen/text_size_large" />
    </RelativeLayout>

</ScrollView>
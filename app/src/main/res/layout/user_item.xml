<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/feed_bg"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/user_item_margin"
        android:layout_marginRight="@dimen/user_item_margin"
        android:layout_marginTop="@dimen/user_item_margin"
        android:background="@drawable/bg_parent_rounded_corner"
        android:orientation="vertical"
        android:paddingBottom="@dimen/user_item_padding_top_bottom"
        android:paddingTop="@dimen/user_item_padding_top_bottom" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/user_item_padding_left_right"
            android:paddingRight="@dimen/user_item_padding_left_right" >

            <com.optimalsolutions.fadfed.utils.CircularNetworkImageView
                android:id="@+id/profilePic"
                android:layout_width="@dimen/feed_item_profile_pic"
                android:layout_height="@dimen/feed_item_profile_pic"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:src="@drawable/user_image_undefind" />

            <TextView
                android:id="@+id/nametv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/profilePic"
                android:gravity="right"
                android:textColor="@color/feed_item_name"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/agetitletv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/nametv"
                android:layout_below="@+id/nametv"
                android:layout_marginTop="5dp"
                android:text="@string/dateofbirth"
                android:textColor="@color/feed_number_color"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/agetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/agetitletv"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/agetitletv"
                android:textColor="@color/feed_number_color"
                android:textSize="@dimen/feed_item_numbers" />

            <TextView
                android:id="@+id/gendertitletv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/nametv"
                android:layout_below="@+id/agetitletv"
                android:layout_marginTop="5dp"
                android:text="@string/sex"
                android:textColor="@color/feed_number_color"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/gendertv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/gendertitletv"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/gendertitletv"
                android:textColor="@color/feed_number_color"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/countrytitletv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/nametv"
                android:layout_below="@+id/gendertitletv"
                android:layout_marginTop="5dp"
                android:text="@string/country"
                android:textColor="@color/feed_number_color"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/countrytv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/countrytitletv"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/countrytitletv"
                android:textColor="@color/feed_number_color"
                android:textSize="@dimen/text_size_small" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
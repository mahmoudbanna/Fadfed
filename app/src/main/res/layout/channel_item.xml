<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:paddingLeft="@dimen/feed_item_padding_left_right"
        android:paddingRight="@dimen/feed_item_padding_left_right" >

        <com.optimalsolutions.fadfed.utils.CircularNetworkImageView
            android:id="@+id/profilePic"
            android:layout_width="@dimen/feed_item_profile_pic"
            android:layout_height="@dimen/feed_item_profile_pic"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/user_image_undefind" />

        <TextView
            android:id="@+id/nametv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/profilePic"
            android:gravity="right"
            android:textColor="@color/feed_item_name"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

       <TextView
                android:id="@+id/timestamptv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nametv"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/profilePic"
                android:gravity="right"
                android:textColor="@color/timestamp"
                android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/metv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timestamptv"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/profilePic"
            android:gravity="right"
            android:text="@string/you"
            android:textColor="@color/timestamp"
            android:textSize="@dimen/text_size_small" />



        <LinearLayout
            android:id="@+id/bubble_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/profilePic"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="right"
            android:layout_below="@+id/metv"
            android:background="@drawable/bubble2">

            <com.optimalsolutions.fadfed.emojicon.EmojiconTextView
                android:id="@+id/txtStatusMsgtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:maxEms="12"
                android:gravity="right"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size_large"
                emojicon:emojiconSize="28sp"
                android:textColor="@android:color/primary_text_light" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="#dfdfdf" />

</LinearLayout>